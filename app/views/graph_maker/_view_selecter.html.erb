<% recent_month = @months.shift %>
<%= select_tag(:target_month,
               options_for_select( @months.collect { |month|
                                     [month.strftime('%Y年%m月度'), 
                                      month.strftime('%Y/%m/%d')] 
                                   }.unshift(['直近１ヶ月',
                                               recent_month.strftime('%Y/%m/%d')]),
                                   @target_month.strftime('%Y/%m/%d')),
               :onChange => 'this.form.submit();' ) %>
